<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_view_rounded_white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/leaf_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:minHeight="@dimen/width_50"
        android:paddingLeft="@dimen/padding_7"
        android:text="filename"
        android:textColor="#000"
        android:textSize="15sp" />

    <CheckedTextView
        android:id="@+id/leaf_checkboxText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:paddingLeft="@dimen/padding_5"
        android:paddingRight="@dimen/padding_5"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:gravity="center"
        android:text=""
        android:background="@drawable/background_view_rounded_image"
        android:visibility="visible"
        android:textAppearance="?android:attr/textAppearanceListItemSmall" />

    <ImageView
        android:id="@+id/leaf_zoomTent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/background_view_rounded_image"
        android:minHeight="30dp"
        android:padding="@dimen/padding_10"
        android:src="@drawable/ic_location_on_black_24dp"
        android:visibility="visible" />

</LinearLayout>